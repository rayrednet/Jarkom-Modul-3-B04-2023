upstream worker_round_robin {
  server 192.180.3.1;
  server 192.180.3.2;
  server 192.180.3.3;
}

server {
    listen 80;
    server_name granz.channel.B04.com www.granz.channel.B04.com;

    root /var/www/html;

    index index.html index.htm index.nginx-debian.html;

    location / {
        proxy_pass http://worker_round_robin;
        allow 192.180.3.69;
        allow 192.180.3.70;
        allow 192.180.4.167;
        allow 192.180.4.168;
        deny all;
    }
    
}